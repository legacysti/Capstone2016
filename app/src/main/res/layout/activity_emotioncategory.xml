<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#C390D4"
    tools:context="teamabraham.cerebral_palsy_communicator.emotioncategory">

    <Button
        android:layout_width="550dp"
        android:layout_height="175dp"
        android:text="I don't care&#10;Sijali"
        android:id="@+id/topLeftButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:enabled="true"
        android:clickable="true"
        android:background="@drawable/button_top_left"
        android:textSize="50sp"
        android:longClickable="false"
        android:elegantTextHeight="false"
        android:singleLine="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:onClick="simpleClick"
        android:layout_marginLeft="15dp" />

    <Button
        android:layout_width="550dp"
        android:layout_height="175dp"
        android:text="Aggravated&#10;Kuchochewa"
        android:id="@+id/midLeftButton"
        android:layout_below="@+id/topLeftButton"
        android:layout_alignParentStart="false"
        android:layout_marginTop="35dp"
        android:enabled="true"
        android:textSize="50sp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/button_mid_left"
        android:clickable="true"
        android:layout_alignParentTop="false"
        android:onClick="simpleClick"
        android:layout_marginLeft="15dp" />

    <Button
        android:layout_width="550dp"
        android:layout_height="175dp"
        android:text="Bored&#10;Kuchoka"
        android:id="@+id/botLeftButton"
        android:enabled="true"
        android:textSize="50sp"
        android:background="@drawable/button_bot_left"
        android:clickable="true"
        android:layout_below="@+id/midLeftButton"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="35dp"
        android:onClick="simpleClick"
        android:layout_marginLeft="15dp" />

    <Button
        android:layout_width="550dp"
        android:layout_height="175dp"
        android:text="Sad&#10;Kusikitisha"
        android:id="@+id/topRightButton"
        android:enabled="true"
        android:clickable="true"
        android:background="@drawable/button_top_right"
        android:textSize="50sp"
        android:longClickable="false"
        android:elegantTextHeight="false"
        android:singleLine="false"
        android:layout_alignParentTop="true"
        android:onClick="simpleClick"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp" />

    <Button
        android:layout_width="550dp"
        android:layout_height="175dp"
        android:text="Angry&#10;Hasira"
        android:id="@+id/midRightButton"
        android:enabled="true"
        android:clickable="true"
        android:background="@drawable/button_mid_right"
        android:textSize="50sp"
        android:longClickable="false"
        android:elegantTextHeight="false"
        android:singleLine="false"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/topRightButton"
        android:onClick="simpleClick"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp" />

    <Button
        android:layout_width="550dp"
        android:layout_height="175dp"
        android:text="Happy&#10;Furaha"
        android:id="@+id/botRightButton"
        android:enabled="true"
        android:clickable="true"
        android:background="@drawable/button_bot_right"
        android:textSize="50sp"
        android:longClickable="false"
        android:elegantTextHeight="false"
        android:singleLine="false"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/midRightButton"
        android:onClick="simpleClick"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:text="Yes"
        android:id="@+id/yesButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:enabled="true"
        android:clickable="true"
        android:width="550dp"
        android:height="75dp"
        android:textSize="50dp"
        android:background="@drawable/button_yes"
        android:onClick="simpleClick"
        android:layout_marginLeft="110dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:text="No"
        android:id="@+id/noButton"
        android:enabled="true"
        android:clickable="true"
        android:width="550dp"
        android:height="75dp"
        android:textSize="50dp"
        android:background="@drawable/button_no"
        android:layout_alignParentEnd="false"
        android:onClick="simpleClick"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="110dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/attentionButton"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_attention"
        android:contentDescription="attention button"
        android:onClick="simpleClick"
        android:clickable="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/homeButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="home button"
        android:background="@drawable/button_home"
        android:clickable="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/parentalModeButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_parental_mode"
        android:onClick="parentalModeOnClick"
        android:clickable="false"
        android:longClickable="true" />
</RelativeLayout>
